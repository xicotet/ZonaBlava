<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Filled state when selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/md_theme_light_primaryContainer" />
            <corners android:radius="@dimen/active_indicator_corner_radius" />
            <size
                android:width="@dimen/active_indicator_width"
                android:height="@dimen/active_indicator_height" />
        </shape>
    </item>
    <!-- Empty state for all other cases -->
    <item>
        <shape android:shape="rectangle">
            <!-- Add your desired empty state properties here -->
        </shape>
    </item>
</selector>

