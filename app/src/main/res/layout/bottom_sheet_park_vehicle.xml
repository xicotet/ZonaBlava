<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/CustomBottomSheet">

    <View
        android:id="@+id/bottom_sheet_drag_handle"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/margin_medium"
        android:background="@color/md_theme_light_onBackground"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/bottom_sheet_park_vehicle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:fontFamily="@font/ezra_bold"
        android:textSize="@dimen/text_size_extra_large"
        android:text="@string/bottom_sheet_parking_type_title"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_drag_handle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bottom_sheet_park_vehicle_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny"
        android:fontFamily="@font/ezra_bold"
        android:textSize="@dimen/text_size_extra_large"
        android:text="@string/bottom_sheet_parking_type_subtitle"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_park_vehicle_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bottom_sheet_park_vehicle_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_regular"
        android:layout_marginHorizontal="@dimen/margin_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_park_vehicle_subtitle"
        app:srcCompat="@drawable/parking_symbol" />

    <TextView
        android:id="@+id/bottom_sheet_park_vehicle_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_regular"
        android:text="Calle de Prueba de la Trinidad de su Alfonso 23, Valencia"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_sheet_park_vehicle_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bottom_sheet_park_vehicle_image"
        app:layout_constraintTop_toTopOf="@+id/bottom_sheet_park_vehicle_image" />

    <Button
        android:id="@+id/bottom_sheet_park_vehicle_confirm_button"
        style="@style/CustomPermissionBottomSheetButtons"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginVertical="@dimen/margin_medium"
        android:backgroundTint="@color/md_theme_light_primary"
        android:fontFamily="@font/roboto_medium"
        android:gravity="center"
        android:paddingHorizontal="@dimen/padding_large"
        android:text="@string/bottom_sheet_parking_confirm_button"
        android:textColor="@color/md_theme_light_onPrimary"
        android:textSize="@dimen/text_size_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_sheet_park_vehicle_image" />
</androidx.constraintlayout.widget.ConstraintLayout>