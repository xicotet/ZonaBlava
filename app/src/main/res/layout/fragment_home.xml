<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/content_description_map_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchButton"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_bar_height"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:paddingHorizontal="@dimen/padding_large"
        android:backgroundTint="@color/md_theme_light_tertiaryContainer"
        android:drawableLeft="@drawable/search"
        android:drawablePadding="@dimen/padding_medium"
        android:fontFamily="@font/ezra_medium"
        android:gravity="start|center_vertical"
        android:text="@string/home_search_bar_title"
        android:textColor="@color/md_theme_light_onBackground"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/bottomSheetParkVehicleCoordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
            android:id="@+id/bottomSheetParkVehicleContainer"
            style="@style/CustomBottomSheet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <include
                android:id="@+id/bottomSheetParkVehicle"
                layout="@layout/bottom_sheet_park_vehicle" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/myLocationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:background="@drawable/background_my_location_button"
            android:contentDescription="@string/content_description_my_location_button"
            android:elevation="@dimen/elevation_home_image_button"
            android:src="@drawable/my_location_fill"
            app:layout_anchor="@id/bottomSheetParkVehicle"
            app:layout_anchorGravity="top|end" />

        <ImageButton
            android:id="@+id/homeSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:elevation="@dimen/elevation_home_image_button"
            android:background="@drawable/background_my_location_button"
            android:contentDescription="@string/content_description_settings_button"
            android:src="@drawable/settings_fill"
            app:layout_anchor="@id/bottomSheetParkVehicle"
            app:layout_anchorGravity="top" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>